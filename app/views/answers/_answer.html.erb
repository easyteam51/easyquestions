<div id="answer-<%= answer.id %>" class="border-b p-4 flex justify-between items-center">
  <div>
    <h3 class="text-sm font-medium"><%= answer.user.name %></h3>
    <p class="whitespace-pre-wrap"><%= simple_format(answer.content) %></p>
  </div>

  <% if current_user.own?(answer) %>
    <div class="flex space-x-2">
      <%= button_to "Delete", answer_path(answer), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  <% end %>
</div>
