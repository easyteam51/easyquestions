<div class="font-bold text-4xl">編集ページ</div>
<div style="display: flex; justify-content: center; align-items: center; min-height: 50vh;">
  <div class="col-md-10 col-lg-8 mx-auto" style="font-size: 1rem; padding: 40px;"><br>
    <%= form_with model: @user, url: profiles_path, method: :put do |f| %>
      <div class="field" style="margin-bottom: 30px;">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>
        
      <div class="field" style="margin-bottom: 30px;">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <div class="field" style="margin-bottom: 30px;">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, accept: 'image/*' %>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url %>
          <p>現在のアバターを削除しますか？</p>
          <%= f.check_box :remove_avatar %>
          <%= f.label :remove_avatar, "アバターを削除" %>
        <% end %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="actions" style="margin-bottom: 30px;">
        <%= f.submit "更新", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>    
