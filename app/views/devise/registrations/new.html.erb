<div style="display: flex; justify-content: center; align-items: center; min-height: 50vh;">
  <div class="col-md-10 col-lg-8 mx-auto" style="font-size: 1rem; padding: 20px;"><br><br>
      <h2>新規作成</h2>
    <div class="form-control">
      <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field" style="margin-bottom: 15px;">
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>

        <div class="field" style="margin-bottom: 15px;">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>

        <div class="field" style="margin-bottom: 15px;">
          <%= f.label :password, class: "label" %>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <div class="field" style="margin-bottom: 15px;">
          <%= f.label :password_confirmation, class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <div class="actions" style="margin-bottom: 15px;"><br>
          <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
